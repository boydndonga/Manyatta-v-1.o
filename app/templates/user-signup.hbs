<div id="signupbox" style="display:none; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="panel-heading">
                    <div class="panel-title">Sign Up to save Trips Places and more!</div>
                    <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#loginbox').show()">Login</a>
                    </div>
                </div>
                <div class="panel-body" >
                    <form id="signupform" class="form-horizontal" role="form">

                        <div id="signupalert" style="display:none" class="alert alert-danger">
                            <p>Error:</p>
                            <span></span>
                        </div>



                        <div class="form-group">
                            <label for="email" class="col-md-3 control-label">Email</label>
                            <div class="col-md-9">
                                {{input type='text' class='form-control' value=email placeholder='Email Address'}}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="firstname" class="col-md-3 control-label">First Name</label>
                            <div class="col-md-9">
                            {{input type='text' class='form-control' value=firstName placeholder='First Name'}}

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lastname" class="col-md-3 control-label">Last Name</label>
                            <div class="col-md-9">
                            {{input type='text' class='form-control' value=lastName placeholder='Last Name'}}

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="col-md-3 control-label">Password</label>
                            <div class="col-md-9">
                            {{input type='password' class='form-control' value=password placeholder='Password'}}

                            </div>
                        </div>


                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" {{action 'signUp'}}>Sign Up</button>
                            </div>
                        </div>

                        <div style="border-top: 1px solid #999; padding-top:20px"  class="form-group">
                            <div style="font-size: 85%; text-align: center; position: relative; top:-10px">Already have an Account! <a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#loginbox').show()">Login here</a></div>
                        </div>



                    </form>
                 </div>
            </div>




 </div>
